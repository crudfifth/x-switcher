{
  "manifest_version": 3,
  "name": "Xアカウント切り替え",
  "version": "1.0",
  "description": "Xアカウントを切り替えるための拡張機能",
  "permissions": ["cookies", "storage", "tabs", "scripting"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icon.png",
      "48": "dist/icon.png",
      "128": "dist/icon.png"
    }
  }
}
